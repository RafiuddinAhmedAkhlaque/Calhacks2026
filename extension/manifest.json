{
  "name": "ScrollStop",
  "description": "Stop doomscrolling. Compete with friends. Learn something instead.",
  "version": "1.0",
  "manifest_version": 3,

  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "alarms",
    "scripting",
    "sidePanel"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "popup.html"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["<all_urls>"]
}
